@model PontosWeb.Models.Produto

@{
    ViewData["Title"] = "Produto - Atualizar";
    Layout = null;
}
<h6>@ViewData["Title"]</h6>
<br />

<form asp-action="Atualizar" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-12">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 text-right">
                        <label asp-for="Nome" class="control-label"></label>
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 text-right">
                        <label asp-for="Pontos" class="control-label"></label>
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Pontos" class="form-control" />
                        <span asp-validation-for="Pontos" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 text-right">
                        <label asp-for="Categoria" class="control-label">Categoria</label>
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.CategoriaId, @ViewBag.Categorias as SelectList,
                         "Selecione a categoria", new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" value="Atualizar" class="btn btn-dark btn-block" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>